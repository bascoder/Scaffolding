@inherits Microsoft.VisualStudio.Web.CodeGeneration.Templating.RazorTemplateBase
using System;
using System.Collections.Generic;
using System.Linq;
using System.Threading.Tasks;
using Microsoft.AspNetCore.Http;
using Microsoft.AspNetCore.Mvc;

@{
    var suffix = "Service";
    var suffixLength = suffix.Length;
    string modelName = (Model.ClassName.EndsWith(suffix) ? Model.ClassName.Substring(0, Model.ClassName.Length - suffixLength) : Model.ClassName);
}
namespace @Model.NamespaceName
{
    public class @Model.ClassName
    {
        public async Task<IList<@modelName>> GetAll() 
        {
            return Task.FromResult(new List<@modelName>());
        }

        public async Task<@modelName> GetSingle()
        {
            return Task.FromResult(new @modelName());
        }

        public async Task<@modelName> Create(@modelName resource)
        {
            return Task.FromResult(new @modelName());
        }

        public async Task<@modelName> Edit(@modelName resource)
        {
            return Task.FromResult(new @modelName());
        }
    }
}
